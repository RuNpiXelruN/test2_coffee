<%= form_for @user do |form| %>

  <% if @user.errors.any? %>
    <%= pluralize(@user.errors.count, "error") %> prevented your account from being created:
    <ul>
      <% @user.errors.full_messages.each do |error_message| %>
        <li><%= error_message %></li>
      <% end %>
    </ul>
  <% end %>

  <div>
      <%= form.label :username %>
      <%= form.text_field :username, require: true %>
  </div>
  <div>
      <%= form.label :first_name %>
      <%= form.text_field :first_name, require: true %>
  </div>
  <div>
      <%= form.label :last_name %>
      <%= form.text_field :last_name, require: true %>
  </div>
  <div>
    <%= form.fields_for :profile do |ff| %>
      <%= ff.text_area :bio %>
    <% end %>
  </div>
  <div>
    <%= form.submit "Update" %>
  </div>
<% end %>
